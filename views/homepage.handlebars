{{!-- <main> --}}
  <section class="login-signup">
    <div class="message">
      <h2>Please login or sign up to see our available pets.</h2>
    </div>

    <div class="d-flex justify-content-center">
      <div class="col-md-6 rounded"style="margin: 5px; padding: 5px; background-color: lightgrey">
        <h3>Login:</h3>

        <form class="form login-form">
          <div class="form-outline mb-4">
            <label for="email-login">Email address</label>
            <input class="form-control" type="email" id="email-login" />
          </div>
          <div class="form-outline mb-4">
            <label for="password-login">Password:</label>
            <input class="form-control" type="password" id="password-login" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block mb-4" type="submit">Sign in</button>
          </div>
        </form>
      </div>


      <div class="col-md-6 rounded"style="margin: 5px; padding: 5px; background-color: lightgrey">
        <h3>Sign Up:</h3>
        <form class="form signup-form">
          <div class="form-outline mb-4">
            <label for="name-signup">Name:</label>
            <input class="form-control" type="text" id="name-signup" />
          </div>
          <div class="form-outline mb-4">
            <label for="email-signup">Email address:</label>
            <input class="form-control" type="email" id="email-signup" />
          </div>
          <div class="form-outline mb-4">
            <label for="password-signup">Password:</label>
            <input class="form-control" type="password" id="password-signup" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block mb-4" type="submit">Sign Up</button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script src="./js/login.js"></script>