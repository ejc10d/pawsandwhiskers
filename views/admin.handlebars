<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Post New Pet:</h3>

    <form class="form new-pet-form">
      <div class="form-group">
        <label for="pet-name">Pet name:</label>
        <input class="form-input" type="text" id="pet-name" name="pet-name" />
      </div>

      <div class="form-group">
        <label for="pet-breed">Breed:</label>
        <input class="form-input" type="number" id="pet-breed" name="pet-breed" />
      </div>

      <div class="form-group">
        <label for="pet-gender">Gender:</label>
        <textarea class="form-input" id="pet-gender" name="pet-gender"></textarea>
      </div>
      
      <div class="form-group">
        <label for="pet-color">Color:</label>
        <textarea class="form-input" id="pet-color" name="pet-color"></textarea>
      </div>
      
      <div class="form-group">
        <label for="pet size">Size:</label>
        <textarea class="form-input" id="pet-size" name="pet-size"></textarea>
      </div>

      <div class="form-group">
      <input type="file" accept="image/*" onchange="loadFile(event)">
      <p><img id="output" width="200"/></p>
      </div>

      <div class="form-group">
        <label for="pet-age">Age:</label>
        <textarea class="form-input" id="pet-age" name="pet-age"></textarea>
      </div>

      <div class="form-group">
        <label for="pet-desc">Description:</label>
        <textarea class="form-input" id="pet-desc" name="pet-desc"></textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

 
 {{#if dogs.length}}
    <div class='col-md-6 dog-list'>
      <h3>Dog Listings:</h3>

      {{#each dogs as |dog|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/dog/{{dog.id}}'>{{dog.name}}</a></h4>
          </div>
        {{/each}}   
        {{/if}}
 
 {{#if cats.length}}
    <div class='col-md-6 dog-list'>
      <h3>Cat Listings:</h3>

      {{#each cats as |cat|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/cat/{{cat.id}}'>{{cat.name}}</a></h4>
          </div>
          {{/each}}   
        {{/if}}

    
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    
<script src="./js/admin.js"></script>
